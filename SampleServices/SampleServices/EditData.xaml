<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleServices.EditData" Title="Edit TodoItem">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding ID}" IsEnabled="False" />
            <Entry Text="{Binding Name}" />
            <Entry Text="{Binding Notes}" />
            <Switch IsToggled="{Binding Done}" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnEdit" Text="Edit" Clicked="btnEdit_Clicked" />
                <Button x:Name="btnDelete" Text="Delete" Clicked="btnDelete_Clicked" />
                <Button x:Name="btnBack" Text="Back" Clicked="btnBack_Clicked" />
                <Button x:Name="btnBinding" Text="Binding" Clicked="btnBinding_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>