<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleServices.TambahData" Title="Tambah Data">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding ID}" IsEnabled="False" />
            <Entry Text="{Binding Name}"  Placeholder="insert name" />
            <Entry Text="{Binding Notes}" Placeholder="insert notes" />
            <Switch IsToggled="{Binding Done}" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnTambah" Text="Tambah" Clicked="btnTambah_Clicked" />
                <Button x:Name="btnBack" Text="Back" Clicked="btnBack_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>